"""Builds the application main binary"""


def build(bld):
    """runs the main build by linking the previously built libraries
    and the objects built within this wscript"""
    target = bld.env.APPNAME.lower()
    source = [
        "fassert.c",
        "fstartup.c",
        "main.c",
    ]
    linker_script_elf = bld.path.find_node("app.cmd")
    linker_script_hex = bld.path.find_node("app_hex.cmd")
    includes = [
        "include",
        "../application/config",
        "../driver/adc",
        "../driver/checksum",
        "../driver/config",
        "../driver/contactor",
        "../driver/dma",
        "../driver/foxmath",
        "../driver/i2c",
        "../driver/io",
        "../driver/led",
        "../driver/meas",
        "../driver/pwm",
        "../driver/spi",
        "../driver/sps",
        "../driver/mcu",
        "../engine/config",
        "../engine/database",
        "../engine/diag",
        "../engine/hw_info",
        "../task/os",
        "../task/config",
        "../../version",
    ]
    includes.extend(
        bld.env.INCLUDES_RTOS + bld.env.INCLUDES_RTOS_ADDONS + bld.env.INCLUDES_AFE
    )
    cflags = bld.env.CFLAGS_FOXBMS
    use = [
        f"{bld.env.APPNAME.lower()}-application",
        f"{bld.env.APPNAME.lower()}-task",
        f"{bld.env.APPNAME.lower()}-engine",
        f"{bld.env.APPNAME.lower()}-driver",
        f"{bld.env.APPNAME.lower()}-os",
        f"{bld.env.APPNAME.lower()}-hal",
    ]

    bld.tiprogram(
        source=source,
        linker_script=linker_script_elf,
        linker_script_hex=linker_script_hex,
        includes=includes,
        cflags=cflags,
        use=use,
        target=target,
        app_build_cfg=True,
    )
